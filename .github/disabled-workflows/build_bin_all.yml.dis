name: Build Linux & Windows Binaries Simultaneously (PyInstaller)

on:
  workflow_dispatch:

jobs:
  build_pyinst:
    name: Build OSCR-UI Binary
    runs-on: ${{ matrix.runner }}
    strategy:
      fail-fast: false
      matrix:
        include:
          - runner: ubuntu-latest
            shell: bash
            icon: assets/oscr_icon_small.png
            sep: ":"
            artifact: OSCR-UI_x86-64_Linux

          - runner: windows-latest
            shell: pwsh
            icon: assets\oscr_icon_small.ico
            sep: ";"
            artifact: OSCR-UI_x86-64_Windows

          # In the future if we want to we can simply add another runner here
          # in the same file for MacOS (if people even play STO on there)

    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.13"

      - name: Install Python Dependencies
        shell: ${{ matrix.shell }}
        run: |
          python -m pip install --upgrade pip
          python -m pip install "pyinstaller==6.10.0" "PySide6==6.10.0" "pyqtgraph==0.13.7" "numpy==2.2.4" "STO-OSCR==2025.8.10.0" "OSCR-django-client==2025.7.19.0" "pydantic==2.12.3"

      - name: Build OSCR-UI Binary with PyInstaller
        shell: ${{ matrix.shell }}
        run: |
          pyinstaller --name OSCR-UI --onedir main.py --add-data "assets${{ matrix.sep }}assets" --add-data "locales${{ matrix.sep }}locales" --icon "${{ matrix.icon }}" --windowed

      - name: Upload PyInstaller Artifact
        uses: actions/upload-artifact@v4
        with:
          name: ${{ matrix.artifact }}
          path: dist/OSCR-UI
